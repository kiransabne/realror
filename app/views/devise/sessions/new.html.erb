<h2><%= t 'views.home.signin' %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div><%= f.label t 'views.home.email' %><br />
<%= f.email_field :email, :autofocus => true %></div>

<div><%= f.label t 'views.home.password' %><br />
<%= f.password_field :password %></div>

<% if devise_mapping.rememberable? -%>
  <div><%= f.check_box :remember_me %> <%= f.label t 'views.home.remember' %></div>
<% end -%>

<div><%= f.submit t 'views.home.signin' %></div>
<% end %>

<%= render "devise/shared/links" %>
