<div class="container">
  
  <div class="span12">



<div class="accordion" id="accordion2">

<% @categories.each do |category| %> 


    <div class="accordion-group">

    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapse<%= category.id %>">
        <strong><%= category.name %></strong>
      </a>
    </div>

    <div id="collapse<%= category.id %>" class="accordion-body collapse">
      <div class="accordion-inner">
        
        <div id="carousel_container">
            <div class="pull-right">
                <button class="btn">See all products</button>
            </div>   

            <div class="carousel">
                <% @items = @products.where("category_id = #{category.id}") %>
                <%= render :partial => "products", :collection => @items %>
            </div>

            <a href="#" class="carousel_prev" ></a> 
            <a href="#" class="carousel_next" ></a>     
        </div>
      
      </div>
    </div>

  </div>



<% end %> 


</div>



   

  </div>
</div>