<h1>Listing Products</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Product</th>
      <th>Description</th>
      <th>Category</th>
      <th>Price</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.photo.url(:mini) %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.category.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_product_path(product), :class => 'btn btn-mini' %>
        </td>
        <td><%= link_to '<i class="icon-remove icon-white"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn  btn-danger btn-mini' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>